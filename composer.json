{
    "name": "queencitycodefactory/cakespreadsheet",
    "description": "CakePHP 4.x PHP Spreadsheet",
    "type": "cakephp-plugin",
    "keywords": ["cakephp", "php", "excel", "spreadsheet"],
    "homepage": "https://github.com/QueenCityCodeFactory/CakeSpreadsheet.git",
    "license": "MIT",
    "authors": [
        {
            "name": "Willetts Tech",
            "homepage": "https://www.willettstech.com/"
        }
    ],
    "support":{
        "source":"https://github.com/QueenCityCodeFactory/CakeSpreadsheet",
        "issues":"https://github.com/QueenCityCodeFactory/CakeSpreadsheet/issues"
    },
    "require": {
        "php": ">=7.2.0",
        "cakephp/cakephp": "^4.0.6",
        "phpoffice/phpspreadsheet": "^1.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.5.0",
        "cakephp/bake": "^2.0",
        "cakephp/cakephp-codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "CakeSpreadsheet\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
           "CakeSpreadsheet\\Test\\": "tests"
        }
    },
    "scripts": {
        "check": [
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p ./src ./tests",
        "cs-fix": "phpcbf --colors ./src ./tests"
    }
}
